include ../mixins/sub-menu.pug

header.header 
  .container 
    .row.align-items-center 
      .col-3 
        .inner-logo 
          a(href="/")
            img(src="/images/logo.jpg", alt="Logo") 

      .col-5 
        form(
          action="/search"
          method="GET"
        )
          div(class="form-group d-flex mb-0")
            input(
              class="form-control"
              placeholder="Nhập từ khóa..."
              type="text"
              name="keyword"
              if(keyword)
                value=keyword
            )
            button(
              class="btn btn-primary"
              type="submit"
            ) Tìm
  
      .col-4 
        .inner-menu 
          ul 
            li 
              a(href="/") Trang chu 
            li(class="sub-menu")
              -const pathProduct = "/products"
              a(href= pathProduct) San pham
                +sub-menu(layoutProductsCategory, pathProduct) 
            li 
              a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.sumQuantity : "0"})